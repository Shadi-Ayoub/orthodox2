{
    "name": "codeigniter4/appstarter",
    "description": "CodeIgniter4 starter app",
    "license": "MIT",
    "type": "project",
    "homepage": "https://codeigniter.com",
    "support": {
        "forum": "https://forum.codeigniter.com/",
        "source": "https://github.com/codeigniter4/CodeIgniter4",
        "slack": "https://codeigniterchat.slack.com"
    },
    "require": {
        "php": "^7.4 || ^8.0",
        "aws/aws-sdk-php": "^3.284",
        "chillerlan/php-qrcode": "^5.0",
        "codeigniter4/framework": "^4.0",
        "google/recaptcha": "^1.3"
    },
    "require-dev": {
        "fakerphp/faker": "^1.9",
        "mikey179/vfsstream": "^1.6",
        "phpunit/phpunit": "^9.1",
        "scssphp/scssphp": "^1.12"
    },
    "autoload": {
        "exclude-from-classmap": [
            "**/Database/Migrations/**"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Support\\": "tests/_support"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit",
        "build": [
            "php app/Tools/compile-scss.php Views/scss/auth.scss public/assets/css/auth.css expanded",
            "php app/Tools/compile-scss.php Views/scss/admin.scss public/assets/css/admin.css expanded",
            "php app/Tools/compile-scss.php Views/scss/dropdown-main-menu.scss public/assets/css/dropdown-main-menu.css expanded"
        ],
        "clear": "php spark cache:clear"
    }
}
